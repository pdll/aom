{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    // "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "baseUrl": "./src",
    "incremental": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["build", "node_modules", "sample", "**/*.spec.ts", "test/**"]
}
